<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.teamjly.mapper.BoardMapper">

	<insert id="create" parameterType="BoardVO">
	insert into tbl_board(title, writer, opendate, closedate, boardimage)
	values(#{title}, #{writer}, #{opendate}, #{closedate}, #{boardimage})
	</insert>

	<select id="read" resultType="BoardVO">
		select * from tbl_board where bno = #{bno}
	</select>

	<update id="update" parameterType="BoardVO">
		update tbl_board set updatedate = #{updatedate} where bno = #{bno}
	</update>

	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>

	<select id="list" resultType="BoardVO">
		select * from tbl_board
	</select>

</mapper>